{{#if template}}
  <div class="await-image-loading">{{yield}}</div>
{{else}}
  <div class="await-image-loading">
    {{defaultLoadingText}}<span class="one">.</span><span class="two">.</span><span class="three">.</span>
  </div>
{{/if}}
{{#if errorThrown}}
  {{#if defaultErrorUrl}}
    <img class="await-image-error" {{bind-attr src=defaultErrorUrl}} />
  {{else}}
    <div class="await-image-error-message">{{defaultErrorText}}</div>
  {{/if}}
{{/if}}
<img class="await-image" {{bind-attr src=url}} />
